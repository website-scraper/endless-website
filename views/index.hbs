<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Test App</title>
    <style>
        .header {
            text-align: center;
        }
        .content {
            padding: 20px;
            margin: 20px;
            border: 2px solid #ccc;
            text-align: center;
        }
    </style>
  </head>
  <body>
    <h1 class="header">{{pageName}}</h1>

    {{#if linkUrls.length }}
        <div class="content">
            <h2>Links ({{ linkUrls.length }})</h2>
            {{#each linkUrls}}
                <a href="{{this}}">{{this}}</a>
            {{/each}}
        </div>
    {{/if}}


    {{#if imageUrls.length }}
        <div class="content">
            <h2>Images ({{ imageUrls.length }})</h2>
            {{#each imageUrls}}
                <img src="{{this}}" />
            {{/each}}
        </div>
    {{/if}}
    
    </ul>
  </body>
</html>
